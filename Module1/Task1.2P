int buttonState =0;
void setup()
{
  pinMode(2, INPUT);
  pinMode(13, OUTPUT);
  
  attachInterrupt(digitalPinToInterrupt(2), hello_isr, CHANGE);
  Serial.begin(9600);
}


void loop()
{
  buttonState = digitalRead(2);
    digitalWrite(13, digitalRead(2));
    Serial.println(buttonState);
    delay(100);
}

void hello_isr(){
  digitalWrite(13, digitalRead(2));
}
